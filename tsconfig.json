{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "build",
    "rootDir": "src",
    "lib": ["ES2020", "DOM"],
    "types": ["node", "electron"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "out", "node_modules", "src/frontend/**/*.ts"]
}
